<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

<!--配置hessian的servlet-->
    <dhcpServiceHandler>
        <dhcpServiceHandler-name>hessian</dhcpServiceHandler-name>
        <dhcpServiceHandler-class>com.latico.commons.hessian.server.dhcpServiceHandler.HelloServiceHessianServlet</dhcpServiceHandler-class>
        <load-on-startup>3</load-on-startup>
    </dhcpServiceHandler>
    <dhcpServiceHandler-mapping>
        <dhcpServiceHandler-name>hessian</dhcpServiceHandler-name>
        <url-pattern>/hessian</url-pattern>
        <!--<url-pattern>/hessian/*</url-pattern>-->
    </dhcpServiceHandler-mapping>

</web-app>
